<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/width_logo"
        android:layout_height="@dimen/height_logo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_forgot_password_title"
        android:gravity="center"
        android:text="@string/sign_forgot_password_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_forgot_password_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_forgot_password_subtitle"
        android:gravity="center"
        android:text="@string/sign_reset_password_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize_forgot_password_subtitle"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sign_edit_text">

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sign_email"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_sign_button"
        android:background="@color/colorAccent"
        android:text="@string/sign_reset_password"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_sign_button"
        android:background="@null"
        android:text="@string/sign_back_button"
        android:textColor="@color/colorAccent" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.MaterialProgressBar.ProgressBar"
        android:layout_width="@dimen/width_progressbar"
        android:layout_height="@dimen/height_progressbar"
        android:layout_gravity="center|bottom"
        android:indeterminate="true"
        android:visibility="gone"
        app:mpb_progressStyle="circular" />

</LinearLayout>